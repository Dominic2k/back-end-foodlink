# ===========================================
# FoodLink Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/foodlink_db?useSSL=false&allowPublicKeyRetrieval=true
DB_USERNAME=foodlink
DB_PASSWORD=your_database_password_here

# JWT Configuration
# IMPORTANT: JWT_SECRET must be at least 32 characters (256 bits) for HS256
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters
JWT_EXPIRATION_MS=86400000

REDIS_HOST=localhost
REDIS_PORT=6379
